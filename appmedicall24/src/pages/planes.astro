---
import Layout from "../layouts/layoutGeneral.astro";
import InfoPlan from "../components/astro/planesPage/InfoPlan.astro";
import GetPlan from "../components/astro/planesPage/getPlan.astro";
import ViewIndex from "../components/astro/planesPage/ViewIndex.astro";
import InfoText from "../components/astro/planesPage/InfoText.astro";
import HeaderPlan from "../components/astro/planesPage/HeaderPlanes.astro";
import ViewSimulatedSection from "../components/react/planesPage/ViewSimulatedSection.jsx";
import ModalGetPlan from "../components/astro/planesPage/ModalGetPlan.astro";
// import SimulatedSection from "../components/astro/planesPage/Simulated.astro";
// import DesignBox from "../components/astro/planesPage/DesignBox.astro";
---

<main>
  <Layout title="Inicio - Planes Empresariales">
    <HeaderPlan />
    <section
      class="bg-gray-200 py-24 h-full px-24 md:px-4">
      <ViewIndex />
    </section>
    <section class="py-12 px-24 md:px-4">
      <InfoText />
    </section>
    <section id="planes" class="py-12 px-24 md:px-4">
      <InfoPlan />
    </section>
    <section class="py-12 md:px-4">
      <ViewSimulatedSection client:load />
    </section>
    <section class="py-2 px-24 md:px-4">
        <GetPlan />
    </section>
    <ModalGetPlan />
  </Layout>
</main>

<style>

  html {
    scroll-behavior: smooth;
  }


  .animate-slide-in {
    animation: slide-in 1s ease-out;
  }

  .animate-float-left {
    animation: float-left 3s ease-in-out infinite;
  }

  @keyframes float-left {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes slide-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes scrollUp {
    0% {
      transform: translateY(
        100%
      ); /* Empuja el contenido hacia abajo inicialmente */
    }
    100% {
      transform: translateY(0); /* El contenido vuelve a su posici√≥n original */
    }
  }

  .bg-simulated {
    

  }
</style>
