---
interface Props {
	label: string;
    link: string;
}
const { label, link } = Astro.props;
---
<a href={link} class="itransition ease-in-out delay-100 hover:-translate-y-1 hover:scale-110 hover:bg-orange-500 hover:font-bold duration-300 appearance-none block w-80 h-8 bg-transparent border-2 border-orange-500 text-white text-center rounded-xl focus:outline-none focus:ring-5 focus:ring-white-500 focus:border-white-500 font-medium text-lg">
	{label}
</a>
